@model Matrip.Domain.Models.Entities.ma04guide
@{
    ViewData["Title"] = "SalesReport";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}



    <div class="mt-5">
        @{ await Html.RenderPartialAsync("~/Views/Shared/_Message.cshtml"); }
        <h6>Busque o Relatório de Vendas de Sua Empresa</h6>
        <div style="width:400px">
            <form asp-action="Index" asp-controller="SalesReport" asp-area="Guide" method="get">
                <select name="partnerID" class="form-control" required>
                    <option selected="selected" disabled="disabled" value="">Escolha a Empresa</option>
                    @foreach (ma26PartnerGuide ma26PartnerGuide in Model.ma26PartnerGuide)
                    {
                        <option value="@ma26PartnerGuide.FK2625idPartner">@ma26PartnerGuide.ma25partner.ma25name</option>
                    }
                </select>

                <div class="mt-3">
                    <label>Filtrar por tipo de data</label>
                    <select name="DateType" class="form-control" required>
                        <option selected="selected" disabled="disabled" value="">Tipo de Data</option>
                        <option value="1">Por data da compra</option>
                        <option value="2">Por data do passeio</option>
                    </select>
                </div>

                <div class="row mt-3">
                    <div class="col-6">
                        <label>Data de início</label>
                        <input type="date" name="initialDate" class="form-control" required />
                    </div>
                    <div class="col-6">
                        <label>Até a data:</label>
                        <input type="date" name="finalDate" class="form-control" required />
                    </div>
                </div>
                <div class="mt-3">
                    <button class="btn btn-outline-primary btn-lg" type="submit">Pesquisar</button>
                </div>
            </form>
        </div>
        
    </div>

