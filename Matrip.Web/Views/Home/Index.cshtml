                <div class="icon_box_container d-flex flex-row  justify-content-between flex-wrap">
                    @{
                        int index = 0;
                    }
                    @if (Model.ma05tripList != null)
                    {
                        @for (int i = 0; i < Model.ma05tripList.Count(); i++)
                        {
                            index++;
                            <!-- Icon Box -->
                            <div class="icon_box d-flex flex-column align-items-center justify-content-start text-center">
                                <div class="icon_box_num">@Html.Raw("0" + index + ".")</div>
                                @if (Model.ma05tripList[i].ma13tripphoto.Count() > 0)
                                {
                                    @if (Model.ma05tripList[i].ma13tripphoto.ToList().FirstOrDefault().ma13photoquantity > 0)
                                    {
                                        <div class="icon_box_icon"><img src="@Url.Content("~/images/tripphotos/"+ Model.ma05tripList[i].ma05idtrip + "-" + "1.jpg")"></div>
                                    }
                                    else
                                    {
                                        <div class="icon_box_icon"><img src="@Url.Content("~/images/tripphotos/PASSEIO-SEM-FOTO.jpg")"></div>
                                    }
                                }
                                else
                                {
                                    <div class="icon_box_icon"><img src="@Url.Content("~/images/tripphotos/PASSEIO-SEM-FOTO.jpg")"></div>
                                }
                                <div class="icon_box_title"><a asp-action="ViewTrip" asp-controller="Trip" asp-route-id="@Model.ma05tripList[i].ma05idtrip" style="color:black">@Model.ma05tripList[i].ma05name</a></div>
                                <div class="icon_box_text">
                                    @if (Model.ma05tripList[i].ma05description.Length > descriptionLimit)
                                    {
                                        <p>@Model.ma05tripList[i].ma05description.Substring(0, descriptionLimit) ...</p>
                                    }
                                    else
                                    {
                                        <p>@Model.ma05tripList[i].ma05description</p>
                                    }
                                </div>
                            </div>

                            if (index == 3)
                            {
                                break;
                            }

                        }
                    }

