@model Matrip.Domain.Models.AccountModels.EmailModel
@{
    Layout = "~/Views/Shared/_LayoutLoginRegister.cshtml";
    ViewData["Title"] = "Esqueci a senha";
}


<div class="limiter">
    <div class="container-login100" style="background-image: url('../images/login_bg.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-40 p-b-54">
            <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="login100-form validate-form">

                <span class="login100-form-title p-b-10">
                    <img src="~/images/logo-matrip-oficial-01.png" width='150' alt="Logo MATrip">

                </span>
                @if (ViewData["MSG_E"] != null)
                {
                    <p class="alert">@ViewData["MSG_E"]</p>
                }
                <div class="wrap-input100 validate-input m-b-23" data-validate="Digite seu Email!">
                    <span class="label-input100">E-mail</span>
                    <input type="email" asp-for="Email" class="input100" placeholder="Digite seu Email" required="required">
                    <span class="focus-input100" data-symbol="&#xf15a;"></span>
                </div>


                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn">
                            Enviar
                        </button>
                    </div>
                </div>

                <div class="txt1 text-center p-t-20 p-b-20">

                    <a asp-controller="Account" asp-action="Register" class="txt2">
                        Registre-se
                    </a>
                </div>

                <div class="flex-c-m">
                    <a href="#" class="login100-social-item bg1">
                        <i class="fa fa-facebook"></i>
                    </a>

                    <a href="#" class="login100-social-item bg2">
                        <i class="fa fa-twitter"></i>
                    </a>

                    <a href="#" class="login100-social-item bg3">
                        <i class="fa fa-google"></i>
                    </a>
                </div>
                <!--
                <div class="flex-col-c p-t-155">
                    <span class="txt1 p-b-17">
                        Or Sign Up Using
                    </span>
                </div>
                -->
            </form>
        </div>
    </div>
</div>


<div id="dropDownSelect1"></div>
