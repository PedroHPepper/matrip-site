@model Matrip.Domain.Models.AccountModels.ResetPasswordModel
@{
    Layout = "~/Views/Shared/_LayoutLoginRegister.cshtml";
    ViewData["Title"] = "Recuperar Senha";
}


<div class="limiter">
    <div class="container-login100" style="background-image: url('../images/login_bg.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-40 p-b-54">
            <form asp-controller="Account" asp-action="ResetPasswordAction" method="post" class="login100-form validate-form">

                <span class="login100-form-title p-b-10">
                    <img src="~/images/logo-matrip-oficial-01.png" width='150' alt="Logo MATrip">

                </span>
                @if (ViewData["MSG_E"] != null)
                {
                    <p class="alert">@ViewData["MSG_E"]</p>
                }
                <input type="hidden" asp-for="UserId" value="@ViewBag.Id" />
                <input type="hidden" asp-for="ResetPasswordToken" value="@ViewBag.Code" />

                <div class="wrap-input100 validate-input" data-validate="Digite sua senha!">
                    <span class="label-input100">Nova Senha</span>
                    <input type="password" asp-for="NewPassword" minlength="4" class="input100" placeholder="Digite sua senha" required="required">
                    <span class="focus-input100" data-symbol="&#xf190;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Digite sua senha!">
                    <span class="label-input100">Confirmar Senha</span>
                    <input type="password" asp-for="ConfirmNewPassword" minlength="4" class="input100" placeholder="Digite sua senha" required="required">
                    <span class="focus-input100" data-symbol="&#xf190;"></span>
                </div>
                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn">
                            Salvar
                        </button>
                    </div>
                </div>


                <div class="flex-c-m">
                    <a href="#" class="login100-social-item bg1">
                        <i class="fa fa-facebook"></i>
                    </a>

                    <a href="#" class="login100-social-item bg2">
                        <i class="fa fa-twitter"></i>
                    </a>

                    <a href="#" class="login100-social-item bg3">
                        <i class="fa fa-google"></i>
                    </a>
                </div>
                <!--
    <div class="flex-col-c p-t-155">
        <span class="txt1 p-b-17">
            Or Sign Up Using
        </span>
    </div>
    -->
            </form>
        </div>
    </div>
</div>


<div id="dropDownSelect1"></div>
