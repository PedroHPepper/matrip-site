
@model Matrip.Domain.Models.AccountModels.UserRegistration
@{
    Layout = "~/Views/Shared/_LayoutLoginRegister.cshtml";
    ViewData["Title"] = "Cadastro";
    var maxDate = DateConvert.HrBrasilia();
}
@section scripts{
    <script src="~/js/mascara.js"></script>
    <script src="~/js/onlyNum.js"></script>
    <script src="~/js/VisitorActions.js" type="text/javascript"></script>
}

<div class="limiter">
    <div class="container-login100" style="background-image: url('../images/login_bg.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-40 p-b-54">
            <form asp-controller="Account" asp-action="Register" method="post" class="login100-form validate-form">

                <span class="login100-form-title p-b-10">
                    <a asp-action="Index" asp-controller="Home">
                        <img src="~/images/logo-matrip-oficial-01.png" width='150' alt="Logo MATrip">
                    </a>
                </span>
                @if (ViewData["MSG_E"] != null)
                {
                    <p class="alert">@ViewData["MSG_E"]</p>
                }

                <div class="wrap-input100 validate-input m-b-23" data-validate="Digite o nome de usuário!">
                    <span asp-validation-for="ma01FullName"></span>
                    <span class="label-input100">Nome</span>
                    <input type="text" asp-for="ma01FullName" class="input100" placeholder="Digite seu nome de usuário" required />
                    <span class="focus-input100" data-symbol="&#xf206;"></span>
                </div>
                <div class="wrap-input100 validate-input m-b-23" data-validate="Digite seu Email!">
                    <span class="label-input100">E-mail</span>
                    <input type="email" asp-for="ma01Email" class="input100" placeholder="Digite seu Email" required="required" />
                    <span class="focus-input100" data-symbol="&#xf15a;"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-23" data-validate="Digite um telefone para contato!">
                    <span class="label-input100">Celular</span>
                    <input type="tel" asp-for="ma01PhoneNumber" class="input100" placeholder="Digite seu Celular" onkeydown="return SomenteNumero(event)" minlength="13" maxlength="13" onkeypress="mascara(this, '## #####-####')" required>
                    <span class="focus-input100" data-symbol="&#xf206;"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-23" data-validate="Digite sua data de nascimento!">
                    <span class="label-input100">Data de Nascimento</span>
                    <input id="date" type="date" asp-for="ma01birth" class="input100" max="@maxDate.ToString("yyyy-MM-dd")" placeholder="Digite sua data de nascimento" minlength="10" maxlength="10" onkeydown="return SomenteNumero(event)" onkeypress="mascara(this, '##/##/####')" required>
                    <span class="focus-input100" data-symbol="&#xf332;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Digite sua senha!">
                    <span class="label-input100">Senha</span>
                    <input type="password" asp-for="Password" class="input100" placeholder="Digite sua senha" required>
                    <span class="focus-input100" data-symbol="&#xf190;"></span>
                </div>

                <div class="container-login100-form-btn p-t-40">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn">
                            Cadastrar
                        </button>
                    </div>
                </div>

                <div class="flex-c-m p-t-20 p-b-20">
                    <a href="#" class="login100-social-item bg1">
                        <i class="fa fa-facebook"></i>
                    </a>

                    <a href="#" class="login100-social-item bg2">
                        <i class="fa fa-twitter"></i>
                    </a>

                    <a href="#" class="login100-social-item bg3">
                        <i class="fa fa-google"></i>
                    </a>
                </div>
                <!--
    <div class="flex-col-c p-t-155">
        <span class="txt1 p-b-17">
            Or Sign Up Using
        </span>
    </div>
    -->
            </form>
        </div>
    </div>
</div>


<div id="dropDownSelect1"></div>


