
@{
    ViewData["Title"] = "SearchTrip";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
@section script{
    <script src="~/js/Requests/AjaxRequest.js" type="text/javascript"></script>
    <script type="text/javascript">
        function AutoComplete() {
            var TripName = document.getElementById("TripName").value;

            if (TripName.length > 2) {
                var url = "@Html.Raw(Url.Action("SearchTrip", "Search", new { TripNameText = "__TripNameText__" }))";
                url = url.replace("__TripNameText__", TripName);
                RequestAutocomplete(url, "#TripName");
            }

        }
    </script>
}

<h1>Busca de Passeio</h1>



<label>Nome do Passeio</label>
@{ await Html.RenderPartialAsync("~/Views/Shared/_Message.cshtml"); }
<form method="get" asp-area="Administrator" asp-action="UpdateTrip" asp-controller="AdminTrip">
    <input id="TripName" name="TripName" type="text" onkeydown="AutoComplete();" required />

    <button type="submit">Pesquisar Passeio</button>
</form>



