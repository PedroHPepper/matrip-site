@model Matrip.Domain.Models.GuideModels.GuideModel
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="mt-5">
    <hr />
    
    @{ await Html.RenderPartialAsync("~/Views/Shared/_Message.cshtml"); }
    <div class="row">
        <div class="TripDiv col-6">
            <form method="post" asp-action="AddGuide" asp-controller="AdminGuide" asp-area="Administrator">
                <h6>Adicionar Guia</h6>

                <div>
                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="Email" required />
                </div>
                <div>
                    <label>MEI</label>
                    <input type="text" class="form-control" asp-for="MEI" required />
                </div>
                <button type="submit" class="btn btn-lg btn-success text-uppercase mt-4" onclick=""> <i class=""></i> Adicionar </button>
            </form>

        </div>
        <div class="TripDiv col-6">
            <form method="post" asp-action="RemoveGuide" asp-controller="AdminGuide" asp-area="Administrator">
                <h6>Remover Guia</h6>

                <div>
                    <label>Email</label>
                    <input type="text" class="form-control" name="GuideEmail" required />
                </div>
                <button type="submit" class="btn btn-lg btn-success text-uppercase mt-4" onclick=""> <i class=""></i> Remover </button>
            </form>
        </div>

    </div>
    <hr />

</div>

